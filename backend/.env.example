# Notion API Configuration
NOTION_API_KEY=your_notion_api_key_here
NOTION_PRODUCTS_DB_ID=your_products_database_id_here
NOTION_RUNCLUBS_DB_ID=your_runclubs_database_id_here
NOTION_WELLNESS_DB_ID=your_wellness_database_id_here
NOTION_SCHOLARSHIP_DB_ID=your_scholarship_database_id_here
NOTION_PAGES_DB_ID=your_pages_database_id_here
NOTION_APPLICATIONS_DB_ID=your_applications_database_id_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Security Configuration
ADMIN_API_KEY=generate_a_secure_random_key_here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# Email Configuration (for future implementation)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_email_api_key_here
EMAIL_FROM=noreply@ultrablack.run
EMAIL_ADMIN=admin@ultrablack.run

# File Storage Configuration (for future implementation)
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=ultrablack-uploads

# Payment Configuration (for future implementation)
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Monitoring (for future implementation)
